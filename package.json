{
  "name": "fricon",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "gen:bindings": "pnpm --filter fricon-ui run gen:bindings",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write --experimental-cli .",
    "format:check": "prettier --check --experimental-cli .",
    "check": "run-p -c type-check lint",
    "fix": "run-s -c lint:fix format",
    "type-check": "pnpm -r run type-check",
    "test": "pnpm -r run test",
    "bundle-licenses": "run-p -c bundle-licenses:rust bundle-licenses:npm",
    "bundle-licenses:rust": "cd crates/fricon-py && cargo bundle-licenses --format toml --output ../../THIRD_PARTY_RUST.toml",
    "bundle-licenses:npm": "generate-license-file --input crates/fricon-ui/frontend/package.json --output THIRD_PARTY_NPM.txt --overwrite"
  },
  "packageManager": "pnpm@10.30.1+sha512.3590e550d5384caa39bd5c7c739f72270234b2f6059e13018f975c313b1eb9fefcc09714048765d4d9efe961382c312e624572c0420762bdc5d5940cdf9be73a",
  "type": "module",
  "devDependencies": {
    "@eslint/compat": "^2.0.2",
    "@eslint/js": "^9.39.3",
    "@tauri-apps/cli": "^2.10.0",
    "@tsconfig/node-lts": "^24.0.0",
    "@tsconfig/node-ts": "^23.6.4",
    "@types/node": "^25.3.0",
    "eslint": "^9.39.3",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-dom": "^2.13.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.0",
    "eslint-plugin-react-x": "^2.13.0",
    "generate-license-file": "^4.1.1",
    "globals": "^17.3.0",
    "npm-run-all2": "^8.0.4",
    "prettier": "3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "typescript-eslint": "^8.56.0"
  }
}
